<!DOCTYPE html>
<html>
  <head>
    <title>Kinesio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Kinesio', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <ul class="nav navbar-nav pull-right">
            <% if patient_signed_in? %>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <%= current_patient.firstname %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to 'Profile', edit_patient_registration_path %></li>
                  <li><%= link_to 'Log out', destroy_patient_session_path, method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to 'Log In', new_patient_session_path %></li>
              <li><%= link_to 'Sign Up', new_patient_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="container">
        <%= render 'layouts/messages' %>
      </div>

      <%= yield :top_content %>

      <div class="container">
        <h1><%= yield :header %></h1>
        <%= yield %>
      </div> 
    </div>
    
  </body>
</html>
